<!--Class Three-->
<div class="container">
    <div class="row">
        <div class="col-md-6">

            <!--Name Entry-->
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" />
            </div>

            <!--Birthday Entry-->
            <div class="form-group">
                <label for="birthday">Birthday</label>
                <input type="text" class="form-control" id="birthday" />
            </div>

            <!--Card-->
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Select your Balloons!</h5>
                    <div>
                        <div class="form-group form-check">
                            <input type="checkbox" class="form-check-input" id="checkAll" />
                            <label class="form-check-label">Check All</label>
                        </div>
                    </div>
                    <div class="form-group form-check">
                        <input type="checkbox" class="form-check-input balloon-checkBox" id="orangeBalloon" />
                        <label class="form-check-label" id="orangeBalloonLabel">Orange Balloons</label>
                    </div>
                    <div class="form-group form-check">
                        <input type="checkbox" class="form-check-input balloon-checkBox" id="pinkBalloon" />
                        <label class="form-check-label"id="pinkBalloonLabel">Pink Balloons</label>
                    </div>
                    <div class="form-group form-check">
                        <input type="checkbox" class="form-check-input balloon-checkBox" id="yellowBalloon" />
                        <label class="form-check-label"id="yellowBalloonLabel">Yellow Ballons</label>
                    </div>
                </div>
            </div>
            <!--End of Card-->
            <button type="button" id="submit" class="btn btn-outline-primary">Submit</button>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div role="alert" aria-live="assertive" aria-atomic="true" class="toast d-none" id="errorToast">
                <div class="toast-header">
                    <strong class="mr-auto">Warning!</strong>
                    <small>11 mins ago</small>
                    <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="toast-body">
                    You need to select a balloon.
                </div>
            </div>
        </div>
    </div>

